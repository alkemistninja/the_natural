<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @post.created_at.strftime('%A, %b, %d') %></p>
    <h1><%= @post.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown(@post.content) %>
  </div>

  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit", edit_post_path(@post)%>
      <%= link_to "Delete", post_path(@post), method: :delete, data:
      {confirm: "You sure about that?"}%>
    </div>
  <% end %>

  <hr>

  <div id="share_box">
    <p>Share <%= @post.title %></p>
    <!--- Twitter --->
    <a onclick="javascript:window.open('https://twitter.com/share?text=<%= @post.title %> by @alkemistninja89 - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300'); void(0);"><i class="fab fa-twitter"></i></a>
    <!--- Facebook --->
    <a onclick="javascript:window.open('https://facebook.com/sharer.php?u=localhost:3000<%= url_for([@post, {only_path: false}])%>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fab fa-facebook"></i></a>
    <!--- Google Plus --->
    <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fab fa-google-plus"></i></a>
  </div>

  <hr>

  <%= render 'disqus' %>

</div>

<br>
<br>
